# 환경 변수 예시 파일
# 실제 사용 시 .env 파일로 복사하여 사용하세요

# 기본 설정
APP_NAME=산불 대응 AI Agent 시스템
VERSION=2.0.0
DEBUG=false

# 서버 설정
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=["*"]

# 데이터베이스 설정
DATABASE_URL=postgresql://admin:password123@localhost:5432/forest_fire_ai
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis 설정
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# RabbitMQ 설정
RABBITMQ_URL=amqp://admin:password123@localhost:5672
RABBITMQ_QUEUE_PREFIX=forest_fire

# AI 모델 설정
AI_MODEL_NAME=믿:음-2.0
AI_MODEL_PATH=./models/mideum-2.0
AI_CONFIDENCE_THRESHOLD=0.8
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7

# Vision AI 설정
VISION_AI_ENDPOINT=https://api.kt.com/gigai
VISION_AI_API_KEY=your_vision_ai_api_key_here
VISION_CONFIDENCE_THRESHOLD=0.85

# IoT 센서 설정
IOT_SENSOR_ENDPOINT=https://sensors.forest-fire.com
IOT_SENSOR_API_KEY=your_iot_sensor_api_key_here
SENSOR_UPDATE_INTERVAL=30

# 기상청 API 설정
WEATHER_API_ENDPOINT=https://apis.data.go.kr/1360000/VilageFcstInfoService_2.0
WEATHER_API_KEY=your_weather_api_key_here

# 알림 설정
NOTIFICATION_CHANNELS=["sms", "email", "push", "radio"]
CAP_PROTOCOL_ENABLED=true
CAP_SERVER_URL=https://cap.forest-fire.com

# 보안 설정
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=logs/forest_fire_ai.log

# 모니터링 설정
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
METRICS_PORT=9090

# FCM 설정 (푸시 알림)
FCM_SERVER_KEY=your_fcm_server_key_here

# 이메일 설정
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here

# SMS 설정
SMS_API_ENDPOINT=https://api.sms-service.com
SMS_API_KEY=your_sms_api_key_here

# 무전 설정
RADIO_API_ENDPOINT=https://api.radio-system.com
RADIO_API_KEY=your_radio_api_key_here
